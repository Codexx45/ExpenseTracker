<div class="register-page">
  <div class="register-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a href="#" class="h1"><b>Expense</b>Tracker</a>
      </div>
      <div class="card-body">
        <p class="login-box-msg">Create a new account</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <!-- Devise error messages -->
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Email Field -->
          <div class="input-group mb-3">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>

          <!-- Password Field -->
          <div class="input-group mb-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>

          <!-- Password Confirmation Field -->
          <div class="input-group mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm password" %>
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>

          <!-- Terms & Conditions Checkbox -->
          <div class="row">
            <div class="col-8">
              <div class="icheck-primary">
                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                <label for="agreeTerms">
                  I agree to the <a href="#">terms</a>
                </label>
              </div>
            </div>
            <!-- Sign Up Button -->
            <div class="col-4">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
            </div>
          </div>
        <% end %>

        <p class="mt-3 mb-1">
          <%= link_to "Already have an account? Sign in", new_session_path(resource_name) %>
        </p>
      </div>
    </div>
  </div>
</div>