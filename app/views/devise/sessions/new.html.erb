<div class="login-page bg-body-secondary">
  <div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header">
        <a href="#" class="link-dark text-center link-offset-2 link-opacity-100 link-opacity-50-hover">
          <h1 class="mb-0"><b>Expense</b>Tracker</h1>
        </a>
      </div>
      <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="input-group mb-3">
            <div class="form-floating">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
              <label for="loginEmail">Email</label>
            </div>
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <div class="input-group mb-3">
            <div class="form-floating">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
              <label for="loginPassword">Password</label>
            </div>
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
          <div class="row">
            <div class="col-8">
              <div class="icheck-primary">
                <%= f.check_box :remember_me, id: "remember" %>
                <%= f.label :remember_me, "Remember me" %>
              </div>
            </div>
            <div class="col-4">
              <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            </div>
          </div>
        <% end %>

        <div class="social-auth-links text-center mb-3">
          <p>- OR -</p>
          <%= link_to new_registration_path(resource_name), class: "btn btn-block btn-success" do %>
            <i class="fas fa-user-plus mr-2"></i> Sign Up
          <% end %>
          <%= link_to new_password_path(resource_name), class: "btn btn-block btn-secondary" do %>
            <i class="fas fa-unlock mr-2"></i> Reset Password
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  <!-- /.login-box -->

  <!-- REQUIRED SCRIPTS -->
  <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js", defer: true %>
</div>
